{
    "name": "@mauricioroberto/lugo4ts",
    "version": "0.0.7-beta",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        "./core": {
            "import": "./dist/core.js",
            "types": "./dist/core.d.ts"
        },
        "./gym": {
            "import": "./dist/gym.js",
            "types": "./dist/gym.d.ts"
        },
        "./playground": {
            "import": "./dist/playground.js",
            "types": "./dist/playground.d.ts"
        },
        "./errors": {
            "import": "./dist/errors.js",
            "types": "./dist/errors.d.ts"
        },
        "./utils": {
            "import": "./dist/utils.js",
            "types": "./dist/utils.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mauriciorobertodev/lugo4ts.git"
    },
    "scripts": {
        "dev": "tsx src/index.ts",
        "build": "tsc && tsc-alias",
        "build:watch": "tsc --watch",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "proto:generate": "npx grpc_tools_node_protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=src/generated2 --grpc_out=src/generated2 -I protos protos/*.proto",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\""
    },
    "keywords": [
        "typescript",
        "lugo bots",
        "lugo4ts",
        "bot"
    ],
    "author": "Mauricio Roberto <mauricio.roberto.dev@gmail.com>",
    "license": "MIT",
    "description": "Um pacote para facilitar o desenvolvimento de aplicações Lugo Bots em TypeScript.",
    "dependencies": {
        "@grpc/grpc-js": "^1.13.4",
        "@protobuf-ts/grpc-transport": "^2.11.0",
        "@tensorflow/tfjs-node": "^4.22.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.28.0",
        "@protobuf-ts/plugin": "^2.11.0",
        "@protobuf-ts/protoc": "^2.11.0",
        "@protobuf-ts/runtime": "^2.11.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^22.15.29",
        "@types/seedrandom": "^3.0.8",
        "@typescript-eslint/eslint-plugin": "^8.33.1",
        "@typescript-eslint/parser": "^8.33.1",
        "@vitest/coverage-istanbul": "^3.2.3",
        "@vitest/coverage-v8": "^3.2.3",
        "@vitest/ui": "^3.2.3",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-import": "^2.31.0",
        "grpc_tools_node_protoc_ts": "^5.3.3",
        "grpc-tools": "^1.13.0",
        "madge": "^8.0.0",
        "prettier": "^3.5.3",
        "rxjs": "^7.8.2",
        "seedrandom": "^3.0.5",
        "ts-proto": "^2.7.2",
        "ts-protoc-gen": "^0.15.1-pre.a71b34e",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.19.4",
        "typescript": "^5.8.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.3"
    }
}
