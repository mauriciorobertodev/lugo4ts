{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "printWidth": 120,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "^@/generated/.*$",
        "^@/interfaces.*$",
        "^@/core.*$",
        "^@/utils.*$",
        "^@/errors.*$",
        "^@/lugo.*$",
        "^@/playground.*$",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
