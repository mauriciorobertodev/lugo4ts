{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": false,
        "declarationMap": true, // opcional, cria sourcemaps para .d.ts
        "sourceMap": true, // opcional, sourcemaps para JS
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "NodeNext"
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules", "dist", "test", "tests", "coverage", "docs"]
}
